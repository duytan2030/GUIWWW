                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End pagination  -->
        <script type="text/javascript">
            $("a").click(function () {
                var btn = $(this);
                var id = btn.data('id');
                $.ajax({
                    url: "@Url.Action("getNew")",
                    data: { id: id },
                    dataType: "json",
                    type: "Post",
                    success: function (json) {   
                        $('#addNews').html("");
                            $.each(json, function (index, item) {
                                var img = item.Image;
                                var title = item.Title;
                                var topic = item.TopicName;
                                var idbao = item.NewsId;
                                var row = `<div class="col-lg-6 col-md-6">
                                        <div class="single-what-news mb-100">
                                            <div class="what-img">
                                                  <img src="${img}">
                                            </div>
                                            <div class="what-cap">
                                                <span class="color1">${topic}</span>
                                                <h4><a href="#">${title}</a></h4>
                                                 <a class="page-link" href="https://localhost:44311/News/DetailNews/${idbao}?style=color%3A%23ff0000">link</a>
                                            </div>
                                        </div>
                                    </div>`
                                $('#addNews').append(row);
                            }),                  
                       
                        console.log(json);
                    },
                });
            });
        </script>
    </main>



</body>
